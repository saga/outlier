<mxfile host="app.diagrams.net">
  <diagram name="时间序列异常检测结果可视化">
    <mxGraphModel dx="1400" dy="820" grid="1" gridSize="10" guides="1"
      tooltips="1" connect="1" arrows="1" fold="1" page="1"
      pageScale="1" pageWidth="1200" pageHeight="800">
      <root>
        <mxCell id="0"/>
        <mxCell id="1" parent="0"/>

        <!-- 标题 -->
        <mxCell id="title" value="时间序列异常检测结果可视化"
          style="text;html=1;fontSize=16;fontStyle=1;"
          vertex="1" parent="1">
          <mxGeometry x="420" y="20" width="400" height="40" as="geometry"/>
        </mxCell>

        <!-- 上半部分：时间序列 -->
        <mxCell id="series" value="原始时间序列（标准化指标）"
          style="rounded=1;whiteSpace=wrap;html=1;strokeWidth=1;"
          vertex="1" parent="1">
          <mxGeometry x="80" y="100" width="1040" height="180" as="geometry"/>
        </mxCell>

        <!-- 异常点标注 -->
        <mxCell id="anomaly1" value="异常点"
          style="ellipse;whiteSpace=wrap;html=1;strokeWidth=1;"
          vertex="1" parent="1">
          <mxGeometry x="360" y="160" width="20" height="20" as="geometry"/>
        </mxCell>

        <mxCell id="anomaly2" value="异常点"
          style="ellipse;whiteSpace=wrap;html=1;strokeWidth=1;"
          vertex="1" parent="1">
          <mxGeometry x="680" y="140" width="20" height="20" as="geometry"/>
        </mxCell>

        <!-- 下半部分：异常得分 -->
        <mxCell id="score" value="异常得分 / 重构误差"
          style="rounded=1;whiteSpace=wrap;html=1;strokeWidth=1;"
          vertex="1" parent="1">
          <mxGeometry x="80" y="340" width="1040" height="180" as="geometry"/>
        </mxCell>

        <!-- 阈值线 -->
        <mxCell id="threshold" value="动态阈值 θ"
          style="text;html=1;fontSize=12;"
          vertex="1" parent="1">
          <mxGeometry x="980" y="360" width="120" height="30" as="geometry"/>
        </mxCell>

        <!-- 异常得分点 -->
        <mxCell id="scorePoint1" value=""
          style="ellipse;whiteSpace=wrap;html=1;strokeWidth=1;"
          vertex="1" parent="1">
          <mxGeometry x="360" y="380" width="16" height="16" as="geometry"/>
        </mxCell>

        <mxCell id="scorePoint2" value=""
          style="ellipse;whiteSpace=wrap;html=1;strokeWidth=1;"
          vertex="1" parent="1">
          <mxGeometry x="680" y="360" width="16" height="16" as="geometry"/>
        </mxCell>

        <!-- 说明框 -->
        <mxCell id="note" value="注：当异常得分超过动态阈值 θ 时，判定为异常"
          style="rounded=1;whiteSpace=wrap;html=1;strokeWidth=1;"
          vertex="1" parent="1">
          <mxGeometry x="300" y="560" width="600" height="60" as="geometry"/>
        </mxCell>

      </root>
    </mxGraphModel>
  </diagram>
</mxfile>
